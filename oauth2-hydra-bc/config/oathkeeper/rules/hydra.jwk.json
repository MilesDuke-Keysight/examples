      "url": "http://localhost:4444/"
    },
    "requiredResource": "${HYDRA_RESOURCE_PREFIX}keys:$1",
    "requiredAction": "${HYDRA_ACTION_PREFIX}create",
    "requiredScopes": [
      "hydra.keys.create"
    ]
  },
  {
    "id": "${OATHKEEPER_RESOURCE_PREFIX}rules:hydra:keys:update-key-set",
